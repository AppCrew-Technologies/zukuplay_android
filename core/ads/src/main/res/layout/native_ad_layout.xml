<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/native_ad_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ad Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/ad_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ad"
                    android:textSize="12sp"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/ad_label_background"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/advertiser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sponsored"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Ad Icon -->
                <ImageView
                    android:id="@+id/ad_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Headline -->
                    <TextView
                        android:id="@+id/headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ad Headline"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Body -->
                    <TextView
                        android:id="@+id/body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ad description text"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Call to Action -->
                    <TextView
                        android:id="@+id/call_to_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn More"
                        android:textSize="14sp"
                        android:textColor="@color/primary_color"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/cta_background"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Media View (for video/image ads) -->
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/media_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</com.google.android.gms.ads.nativead.NativeAdView>
